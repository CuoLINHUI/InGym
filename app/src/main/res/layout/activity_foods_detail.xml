<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foods_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stefan.ingym.ui.activity.index.FoodsDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/food_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="食物名称"
            android:textSize="20sp"
            android:textColor="@color/app_white"
            android:gravity="center_vertical" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="5.0dip"
                android:clickable="false"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" >

                    <ImageView
                        android:id="@+id/iv_food_pic"
                        android:layout_width="110dp"
                        android:layout_height="fill_parent"
                        android:background="@drawable/default_pic"
                        android:scaleType="fitXY" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/food_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:text="耗油牛肉"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/food_calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="163"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="千卡"
                            android:textColor="@color/gray"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="/"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/food_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="100"
                            android:textColor="@color/text_black"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="克"
                            android:textColor="@color/gray"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:paddingTop="6dp"
                android:paddingBottom="16dp"
                android:text="营养元素"
                android:textSize="20sp"
                android:textColor="@color/text_black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="100克"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="3dp"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        />

                </LinearLayout>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="1.2dp"
                   android:layout_marginTop="0.3dp"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="12dp"
                   android:background="#CDCDCD"
                   />

                <LinearLayout
                    android:id="@+id/ll_nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_cal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/food_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="163"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/food_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="kcal"
                                android:textSize="12sp"
                                android:textColor="@color/text_black"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_below="@+id/ll_cal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="热量"
                            android:textSize="15sp"
                            android:textColor="@color/text_gray"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#CDCDCD" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/food_protein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="17.6"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/food_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="g"
                                android:textSize="12sp"
                                android:textColor="@color/text_black"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_below="@+id/ll_protein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="蛋白质"
                            android:textSize="15sp"
                            android:textColor="@color/text_gray"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#CDCDCD" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_carbohydrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/food_carbohydrate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.2"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/food_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="g"
                                android:textSize="12sp"
                                android:textColor="@color/text_black"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_below="@+id/ll_carbohydrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="碳水物"
                            android:textSize="15sp"
                            android:textColor="@color/text_gray"
                            />

                    </RelativeLayout>

                    <View
                        android:layout_width="0.7dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#CDCDCD" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/food_fat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.4"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/food_kcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="g"
                                android:textSize="12sp"
                                android:textColor="@color/text_black"
                                />

                        </LinearLayout>

                        <TextView
                            android:layout_below="@+id/ll_fat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="脂肪"
                            android:textSize="15sp"
                            android:textColor="@color/text_gray"
                            />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.2dp"
                    android:layout_marginTop="0.3dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#CDCDCD"
                    />

                <LinearLayout
                    android:id="@+id/more_nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_gray"
                        android:textSize="17sp"
                        android:text="更多营养元素" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/enter" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="减肥人群:"
                    android:textSize="20sp"
                    android:textColor="@color/text_black"
                    />
                <TextView
                    android:id="@+id/food_recommended_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐食用"
                    android:textSize="20sp"
                    android:textColor="@color/text_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/food_about_background"
                    >

                    <TextView
                        android:id="@+id/food_recommended_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_margin="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/text_black"

                        android:text="炒是使用最广泛的一种烹调方法，用油量的高低决定热量的高低，从而影响其在减肥期间的适宜程度，减肥期间推荐清淡少油的清炒菜肴。"
                        />

                </LinearLayout>

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="6dp"
                android:text="食物分类"
                android:textSize="20sp"
                android:textColor="@color/text_black"
                />

            <LinearLayout
                android:id="@+id/ll_cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_gray"
                    android:textSize="17sp"
                    android:text="广东菜" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/enter" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F5F5F5"
                />

            <LinearLayout
                android:id="@+id/ll_materials_practices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_gray"
                    android:textSize="17sp"
                    android:text="原料及做法" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/enter" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#F5F5F5"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
